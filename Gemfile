source 'http://rubygems.org'

gem 'rake'
gem 'sync_attr'
gem 'thread_safe'

# [optional] MongoDB Appender
gem 'mongo', '~> 1.9.2'
gem 'bson_ext', :platform => 'ruby'

# [optional] Syslog appender
gem 'syslog_protocol'
# [optional] Syslog appender when communicating with a remote syslogd over TCP
gem 'resilient_socket'
# [optional] Splunk appender
gem 'splunk-sdk-ruby'

group :development do
  gem 'awesome_print'
  gem 'travis-lint'
end

group :test do
  gem 'minitest', '~> 3.0'
  gem 'shoulda', '~> 2.0'
  gem 'mocha'
end

